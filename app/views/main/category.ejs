<% layout('layout') -%>



<div class="container">
<div class="row">
    <% for (var i = 0; i < products.length; i++) { %>
       <div class="col-xs-18 col-sm-7 col-md-4  ">
         <div class="thumbnail">

           <img id="thumbimage" src="<%= products[i].image %>">
             <div class="caption">
               <h3><%= products[i].name %></h3>
               <h4><%= products[i].category.name %></h4>
               <p>$<%= products[i].price %></p>
               <p><strong><%= products[i].points %> points</strong></p>
               <a href="#" class="btn btn-default btn-xs pull-right" role="button"><i class="glyphicon glyphicon-edit"></i></a> <a href="/reward/<%= products[i]._id %>" class="btn btn-info btn-xs" role="button">More info</a>
            </div>

           </div>

         </div>
    <% } %>
       </div>

</div>
