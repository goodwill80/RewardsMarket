  <div class="panel panel-default">
    <div class="panel-body">
      <h3>Latest Offers</h3>
<div class="row">
  <% for (var i = 0; i < 3; i++) { %>
  <div class="col-md-4">
    <a href="/reward/<%= products[i]._id %>">
      <div class="thumbnail">
        <img src="<%= products[i].image %>">
        <div class="caption">
          <h3><%= products[i].name %></h3>
          <p><%= products[i].category.name %></h3>
          <p><a class="btn btn-info" href="/reward/<%= products[i]._id %>" role="button">View details &raquo;</a></p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
</div>
</div>

